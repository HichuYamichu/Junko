{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": false,
    "allowJs": true,
    "removeComments": false,
    "alwaysStrict": true,
    "pretty": true,
    "outDir": "dist",
    "lib": [
      "esnext",
      "esnext.array",
      "esnext.asynciterable",
      "esnext.intl",
      "esnext.symbol",
      "dom"
    ],
    "module": "commonjs",
    "target": "es2019",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "sourceRoot": "./",
    "noEmitHelpers": true,
    "importHelpers": true
  }
}
