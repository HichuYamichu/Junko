{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"sourceRoot": "/",
		"incremental": true
  }
}
