{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "alwaysStrict": true,
    "lib": [
			"esnext",
			"esnext.array",
			"esnext.asynciterable",
			"esnext.intl",
			"esnext.symbol",
			"dom"
		],
    "module": "commonjs",
    "target": "es2019",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": true,
    "sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"sourceRoot": "/"
  }
}
